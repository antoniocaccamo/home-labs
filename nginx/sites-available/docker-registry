# Default server configuration
#

upstream registry {
        ip_hash;
        server 192.168.1.4:5000;
}


server {
         listen 80;
         server_name registry.private.antoniocaccamo.work;
         return 301 https://$host$request_uri;
}

server {
	listen 443 ssl;
        server_name registry.private.antoniocaccamo.work;

        ssl_certificate     /etc/nginx/ssl/private.antoniocaccamo.work/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/private.antoniocaccamo.work/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;

        error_log  /var/log/nginx/error-docker-registry.private.antoniocaccamo.work.log;
	
        root /var/www/docker-registry;

	index index.html;

	location / {

                # Do not allow connections from docker 1.5 and earlier
                # docker pre-1.6.0 did not properly set the user agent on ping, catch "Go *" user agents
                if ($http_user_agent ~ "^(docker\/1\.(3|4|5(?!\.[0-9]-dev))|Go ).*$" ) {
                        return 404;
                }
               
                client_max_body_size 16384m;

                proxy_pass http://registry;
                proxy_set_header  Host              $http_host;   # required for docker client's sake
                proxy_set_header  X-Real-IP         $remote_addr; # pass on real client's IP
                proxy_set_header  X-Forwarded-For   $proxy_add_x_forwarded_for;
                proxy_set_header  X-Forwarded-Proto $scheme;
                proxy_read_timeout                  900;
        }
}
