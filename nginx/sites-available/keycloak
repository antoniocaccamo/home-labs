# Default server configuration
#

upstream keycloak {
        ip_hash;
        server 192.168.1.5:8443;
}


server {
         listen 80;
         server_name login.private.antoniocaccamo.work;
         return 301 https://$host$request_uri;
}

server {
	listen 443 ssl;
        server_name login.private.antoniocaccamo.work;

        ssl_certificate     /etc/nginx/ssl/private.antoniocaccamo.work/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/private.antoniocaccamo.work/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;

        error_log  /var/log/nginx/error-keycloak.private.antoniocaccamo.work.log;
	
        root /var/www/keycloak;

	index index.html;

	location / {
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_pass https://keycloak;
        }
}
